{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES2022",

        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "strictFunctionTypes": true,
        "skipDefaultLibCheck": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "allowJs": false,

        "skipLibCheck": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "plugins": [
            {
                "name": "gql.tada/ts-plugin",
                "shouldCheckForColocatedFragments": false,
                "trackFieldUsage": false,
                "schemas": [
                    {
                        "name": "server",
                        "schema": "./src/generated/tada/schema/server.graphql",
                        "tadaOutputLocation": "./src/generated/tada/server-graphql-env.d.ts"
                    }
                ]
            }
        ],
        // paths
        "paths": {
            // "@EnvConfigs": ["EnvConfigs"],
            // "@src/*": ["src/*"]
            "@EnvConfigs": ["EnvConfigs"],
            "@src/*": ["src/*"],
            "*": ["node_modules/*"],
            "@tada-server": ["src/generated/tada/server-graphql"],
            "@tada-client": ["src/generated/tada/initTadaClient"],
            "@hooks": ["src/middlewares/hooks"]
        }
    },
    "include": [
        "src/**/*"
        //"src/generated/*",
        //"src/helpers/useCors.ts",
    ]
}
